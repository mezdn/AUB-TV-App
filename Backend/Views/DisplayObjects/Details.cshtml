@model Backend.Models.DisplayObject

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>DisplayObject</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        @if (Model.Type == Backend.Models.Interfaces.Type.Video)
        {

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.YouTubeID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.YouTubeID)
            </dd>
            <dt class="col-sm-2">
                Card Url
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ImageUrls)
            </dd>

        }
        else
        {
            <dt class="col-sm-2">
                Images
            </dt>
            <dd class="col-sm-10">
                @foreach (var url in Model.ImageUrls.Split(';'))
                {
                    <img src="@url" class="article-image-preview" />
                }
            </dd>
        }
    </dl>
</div>
<div>
    @*<a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |*@
    @*<a asp-action="Index">Back to List</a>*@
</div>


<style>
    .article-image-preview {
        max-height: 300px;
        max-width: 300px;
    }
</style>